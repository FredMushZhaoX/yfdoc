<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yf.document.modules.sys.user.mapper.SysUserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yf.document.modules.sys.user.entity.SysUserRole">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        `id`
        ,`user_id`,`role_id`
    </sql>

    <select id="listByUser" resultMap="com.yf.document.modules.sys.user.mapper.SysRoleMapper.BaseResultMap">
        SELECT *
        FROM sys_role
        WHERE id IN (SELECT role_id FROM sys_user_role WHERE user_id = #{userId})
    </select>

    <select id="findUserPermission" resultType="String">
        SELECT DISTINCT mu.permission_tag
        FROM sys_user_role ur
                 LEFT JOIN sys_role_menu rm ON ur.role_id = rm.role_id
                 LEFT JOIN sys_menu mu ON rm.menu_id = mu.id
        WHERE mu.id IS NOT NULL
          AND mu.permission_tag IS NOT NULL
          AND mu.permission_tag!=''
        AND ur.user_id=#{userId}
    </select>

</mapper>
